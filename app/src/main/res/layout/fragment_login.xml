<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1B2A">

    <!-- Normal içerik -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/logo" />

        <!-- Hoşgeldiniz yazısı -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to FinansHub"
            android:textColor="#E0E0E0"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:gravity="center"/>

        <!-- Google ile giriş + Switch bir arada -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp">

            <!-- Google ile giriş alanı -->
            <LinearLayout
                android:id="@+id/googleLoginContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/google_icon"
                    android:contentDescription="Google Logo"
                    android:layout_marginEnd="12dp"/>

                <Button
                    android:id="@+id/btnGoogleSignIn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sign in with Google"
                    android:textColor="#0D1B2A"
                    android:background="@android:color/transparent"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="0dp"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>


            <!-- Beni hatırla switch -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/googleLoginContainer"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remember Me"
                    android:textColor="@color/text_secondary"
                    android:layout_marginEnd="8dp"/>

                <Switch
                    android:id="@+id/switchRememberMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="#E0E0E0"
                    android:trackTint="#E0E0E0"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


    <!-- Loading ekranı -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#800D1B2A"
        android:visibility="gone"
        android:gravity="center">

        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:indeterminate="true"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleLarge"
            android:indeterminateTint="@color/text_secondary"/>
    </FrameLayout>

</FrameLayout>
